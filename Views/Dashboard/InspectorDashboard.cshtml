@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var user = await UserManager.GetUserAsync(User);
}
<div class="container-fluid">
    <div class="row">
        <div class="col-3">
            <div class="card">
                <div class="imgDiv"><img class="card-img-top btnImage" src="~/Assets/user-100.png" alt="Card image cap"></div>
                <div class="card-body">
                    <h5 class="card-title">@User.Identity.Name</h5>
                    <p class="card-text">
                        Name: @User.Identity.Name <br />
                        Email: @user.Email
                        Type: Inspector
                    </p>
                </div>
            </div>
            <ul class="list-group">
                <li class="list-group-item active">Inspections</li>
                <li class="list-group-item">Reports</li>
                @*<li class="list-group-item">A fourth item</li>
                    <li class="list-group-item">And a fifth one</li>*@
            </ul>
        </div>
        <div class="col-9">
            <div class="">
                <h1 class="display-6" style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif">Property Inspector</h1>
                <h3 class="display-7" style="font-family:'Poppins'">Dashboard</h3>
            </div>
            <div class="input-group mb-3">
                <div class="card" style="width: 15rem;">
                    <div class="card-body">
                        <h5 class="card-title">Create Inspection</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Create new Inspection</h6>
                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#inspectionTypeModal">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-plus" viewBox="0 0 16 16">
                                <path d="M8 6.5a.5.5 0 0 1 .5.5v1.5H10a.5.5 0 0 1 0 1H8.5V11a.5.5 0 0 1-1 0V9.5H6a.5.5 0 0 1 0-1h1.5V7a.5.5 0 0 1 .5-.5z" />
                                <path d="M14 4.5V14a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h5.5L14 4.5zm-3 0A1.5 1.5 0 0 1 9.5 3V1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V4.5h-2z" />
                            </svg>
                            Create
                        </button>
                    </div>
                </div>
                <div class="card" style="width: 15rem;">
                    <div class="card-body">
                        <h5 class="card-title">View Inspections</h5>
                        <h6 class="card-subtitle mb-2 text-muted">View all Inspections</h6>
                        <button type="button" class="btn btn-primary position-relative" asp-area="" asp-controller="Operations" asp-action="CreateRole">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eyeglasses" viewBox="0 0 16 16">
                                <path d="M4 6a2 2 0 1 1 0 4 2 2 0 0 1 0-4zm2.625.547a3 3 0 0 0-5.584.953H.5a.5.5 0 0 0 0 1h.541A3 3 0 0 0 7 8a1 1 0 0 1 2 0 3 3 0 0 0 5.959.5h.541a.5.5 0 0 0 0-1h-.541a3 3 0 0 0-5.584-.953A1.993 1.993 0 0 0 8 6c-.532 0-1.016.208-1.375.547zM14 8a2 2 0 1 1-4 0 2 2 0 0 1 4 0z" />
                            </svg>
                            View
                            <span class="badge text-bg-danger">4</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="inspectionTypeModal" tabindex="-1" role="dialog" aria-labelledby="inspectionTypeModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered inspectionTypeModal" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="inspectionTypeModalLongTitle">Inspection Type</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body inspectionTypeModalBody">
                <div class="card" style="width: 22rem;">
                    <div class="card-body">
                        <h5 class="card-title">Pre-Purchase Inspection</h5>
                        <p class="card-text">
                            This inspection type is used when a property needs to be inspected prior to a customer's purchase.
                        </p>
                        <input type="button" class="btn btn-primary" value="Create" onclick="location.href='@Url.Action("PP_Inspection", "InspectionType")'" />
                    </div>
                </div>
                <div class="card" style="width: 22rem;">
                    <div class="card-body">
                        <h5 class="card-title">Maintenance Report</h5>
                        <p class="card-text">
                            This inspection type is used when a property needs to be inspected for a maintenance report.
                        </p>
                        <input type="button" class="btn btn-primary" value="Create" onclick="location.href='@Url.Action("PP_Inspection", "InspectionType")'" />
                    </div>
                </div>
                <div class="card" style="width: 22rem;">
                    <div class="card-body">
                        <h5 class="card-title">Meth Report</h5>
                        <p class="card-text">
                            This inspection type is used when a property needs to be inspected any type of Meth Preparation.
                        </p>
                        <input type="button" class="btn btn-primary" value="Create" onclick="location.href='@Url.Action("PP_Inspection", "InspectionType")'" />
                    </div>
                </div>
                <div class="card" style="width: 22rem;">
                    <div class="card-body">
                        <h5 class="card-title">Healthy Home</h5>
                        <p class="card-text">
                            This inspection type is used when a property needs to be inspected Healthy Homes.
                        </p>
                        <input type="button" class="btn btn-primary" value="Create" onclick="location.href='@Url.Action("PP_Inspection", "InspectionType")'" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>